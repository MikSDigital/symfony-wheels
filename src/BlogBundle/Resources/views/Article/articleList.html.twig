{% extends 'base.html.twig' %}

{% block body %}
    {% for article in articles %}
        <div>
            <h2><a href="{{ path('article_detail', {id: article.id}) }}">{{ article.title }}</a></h2>
            <p>
                {{ article.content[0:150] }}
                {% if article.content|length > 150 %}...{% endif %}
            </p>
            <div>
                <form action="{{ path('article_delete', {id: article.id}) }}" method="post">
                    <input type="submit" class="btn btn-danger" value="Nuke"/>
                </form>
            </div>
        </div>
    {% endfor %}

    {{ include('@Blog/Pagination/_pagination.html.twig') }}

{% endblock %}
